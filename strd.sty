% Polymorphic for tubes. Deep-copy is infeasible, though.
\newcommand*{\strdcopyC}[2]{% {newid}{previd}
    \strdcopyC@{#1}{#2}
    \ifnodedefined{#2 Left}{ \strdcopyC{#1 Left}{#2 Left} }{}
    \ifnodedefined{#2 Right}{ \strdcopyC{#1 Right}{#2 Right} }{}
}
\newcommand*{\strdcopyC@}[2]{% {newid}{previd}
    \pgfnodealias{#1}{#2}
    \strdcopyfield@{Start}{#1}{#2}
    \strdcopyfield@{StartCorner}{#1}{#2}
    \strdcopyfield@{StartCornerIsSharp}{#1}{#2}
    \strdcopyfield@{Mid}{#1}{#2}
    \strdcopyfield@{Corner}{#1}{#2}
    \strdcopyfield@{CornerIsSharp}{#1}{#2}
    \strdcopyfield@{EndCorner}{#1}{#2}
    \strdcopyfield@{EndCornerIsSharp}{#1}{#2}
    \strdcopyfield@{End}{#1}{#2}%
}
\newcommand*{\strdcopyfield@}[3]{% {field}{newid}{previd}
    \ifnodedefined{#3 #1}{ \pgfnodealias{#2 #1}{#3 #1} }{}
}

